            </div>
            <div class="panel-body">
                <div class="col-md-6">
                    <div class="row form-group">
                        @Html.LabelForWithAsterisk(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:left;" })
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row form-group">
