@using NewCaresPlusMvc.Models
@using NewCaresPlusMvc.Helpers
@model SingleApplicationViewModel

<div class="row">
    <div class="col-md-12 text-center">
        <i class="fa fa-print"></i>
        @Html.ActionLink("Print", "PrintSingleApplication", new { id = Model.Id }, new { target = "_blank" })
