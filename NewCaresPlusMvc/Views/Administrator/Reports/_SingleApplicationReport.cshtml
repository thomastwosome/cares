                        @Html.LabelForWithAsterisk(model => model.Dob, htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:left;" })
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Dob, new
                {
                    @class = "form-control datepicker",
                    @Value = DateTime.MinValue == Model.Dob ? string.Empty : Model.Dob.ToShortDateString()
                })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelForWithAsterisk(model => model.HomePhone, htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:left;" })
